{
  "compilerOptions": {
    "target": "ESNext",
    "types": ["node", "long"],
    "module": "commonjs",
    "lib": ["esnext"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts"]
}
